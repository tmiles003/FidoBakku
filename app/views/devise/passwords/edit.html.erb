
<% if resource.errors.any? %>
  <% resource.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger"><%= msg %></div>
  <% end %>
<% end %>

<h2>Update password</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
  
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name),
  :html => { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, 'New password', :class => 'control-label sr-only' %>
    <div>
      <%= f.password_field :password, :class => 'form-control', :placeholder => 'New password' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm password', :class => 'control-label sr-only' %>
    <div>
      <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirm password' %>
    </div>
  </div>

  <div class="actions text-right">
    <div>
      <input type="submit" value="Save" class="btn btn-default btn-sm btn-success fi-btn-wide">
    </div>
  </div>
  
<% end %>
  </div>
</div>
