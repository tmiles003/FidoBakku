<h2>Reset password</h2>

<div claass="row">

  <div class="col-md-8 col-md-offset-2">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
    :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :email, :class => 'col-md-3 control-label' %>
    <div class="col-md-5">
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
  </div>

  <div class="actions text-right">
    <div class="col-md-offset-3 col-md-5">
      <input type="submit" value="Reset password" class="btn btn-default btn-success fi-btn-wide">
    </div>
    <div class="col-md-offset-3 col-md-5">
      <p class="form-control-static">
        <a href="/login">Login</a>
      </p>
    </div>
  </div>

<% end %>
  </div>
  
</div>
