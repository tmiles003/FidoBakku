<h1>Listing people</h1>

<div class="row">

  <div ng-controller="UsersCtrl" class="col-md-9">
    <ul class="list-group">
      <li ng-repeat="user in users" class="list-group-item">
        {{ user.id }}, {{ user.name }}, {{ user.email }}
        <button class="" data-ng-click="deleteUser(user.id)">Delete</button>
      </li>
    </ul>
  </div>

  <div class="col-md-3">
    <%= render 'form' %>
  </div>

</div>