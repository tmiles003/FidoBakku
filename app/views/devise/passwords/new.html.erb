
<% if resource.errors.any? %>
  <% resource.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger"><%= msg %></div>
  <% end %>
<% end %>

<h2>Reset password</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
    :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  
  <div class="form-group">
    <%= f.label :email, :class => 'control-label sr-only' %>
    <div>
      <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email' %>
    </div>
  </div>

  <div class="actions text-right">
    <div>
      <input type="submit" value="Reset password" 
        class="btn btn-default btn-sm btn-success fi-btn-wide">
    </div>
    <!-- div class="col-md-offset-3 col-md-5">
      <p class="form-control-static">
        <a href="/login">Login</a>
      </p>
    </div -->
  </div>

<% end %>
  </div>
</div>
